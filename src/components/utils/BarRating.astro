---
export interface Props {
  communityRatings: {
    fiveStars: number;
    fourStars: number;
    threeStars: number;
    twoStars: number;
    oneStar: number;
  };
}

const { communityRatings } = Astro.props;
const { fiveStars, fourStars, threeStars, twoStars, oneStar } =
  communityRatings;
---

