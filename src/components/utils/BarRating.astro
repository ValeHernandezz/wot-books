  <a href="#" class="text-sm font-medium hover:underline w-16">5 estrellas</a>
  <div class="w-2/4 h-5 mx-4 bg-gray-500 rounded">
    <div class="h-5 bg-yellow-300 rounded" style={`width: ${fiveStars}%`}></div>
  </div>
  <span class="text-sm font-medium text-gray-500 dark:text-gray-400 w-[36px]"
    >{`${fiveStars}%`}</span
  >
</div>
